<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Electronics Store</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Chatbot CSS - Only for non-admin pages -->
    @if (!ViewContext.RouteData.Values["controller"]?.ToString()?.Equals("Admin", StringComparison.OrdinalIgnoreCase) == true)
    {
        <link rel="stylesheet" href="~/css/chatbot.css" asp-append-version="true" />
    }
    
    <style>
        /* Fix dropdown z-index issues completely */
        .navbar {
            position: relative;
            z-index: 1050;
        }
        
        .navbar .dropdown-menu {
            z-index: 10000 !important;
            position: absolute !important;
            top: 100% !important;
            left: auto !important;
            right: 0 !important;
            transform: none !important;
            will-change: auto !important;
        }
        
        .navbar-nav .dropdown:hover .dropdown-menu {
            display: block;
            z-index: 10000 !important;
        }
        
        .navbar .dropdown {
            position: relative;
            z-index: 1051;
        }
        
        .navbar-nav .dropdown-toggle::after {
            margin-left: 5px;
        }
        
        /* Ensure dropdown is always on top */
        .dropdown-menu.show {
            z-index: 10000 !important;
            position: absolute !important;
        }
        
        /* Override Bootstrap dropdown positioning */
        .dropdown-menu[data-bs-popper] {
            z-index: 10000 !important;
        }
        
        /* Login page styling */
        .login-container {
            min-height: 100vh !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            background-color: var(--theme-bg-primary) !important;
            margin: 0 !important;
            padding: 0 !important;
            position: relative !important;
            transition: background-color 0.3s ease !important;
        }
        
        .login-card {
            backdrop-filter: blur(10px);
            background: rgba(255, 255, 255, 0.95);
            border: none;
            border-radius: 20px;
        }
        
        /* Fix input styling */
        .login-card .form-control {
            background-color: var(--theme-input-bg) !important;
            border: 1px solid var(--theme-input-border) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease !important;
        }

        .login-card .form-control:focus {
            background-color: var(--theme-input-bg) !important;
            border-color: var(--theme-link-color) !important;
            color: var(--theme-text-primary) !important;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
        }

        .login-card .input-group-text {
            background-color: var(--theme-bg-tertiary) !important;
            border: 1px solid var(--theme-input-border) !important;
            color: var(--theme-text-secondary) !important;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease !important;
        }

        .login-card .form-control::placeholder {
            color: var(--theme-text-muted) !important;
            opacity: 0.7;
        }
        
        /* Additional fixes for login inputs */
        .login-container input[type="email"],
        .login-container input[type="password"],
        .login-container input[type="text"],
        .login-container input[type="tel"],
        .login-container textarea {
            background-color: var(--theme-input-bg) !important;
            color: var(--theme-text-primary) !important;
            border: 1px solid var(--theme-input-border) !important;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease !important;
        }

        .login-container input[type="email"]:focus,
        .login-container input[type="password"]:focus,
        .login-container input[type="text"]:focus,
        .login-container input[type="tel"]:focus,
        .login-container textarea:focus {
            background-color: var(--theme-input-bg) !important;
            color: var(--theme-text-primary) !important;
            border-color: var(--theme-link-color) !important;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
        }

        .login-container input::placeholder,
        .login-container textarea::placeholder {
            color: var(--theme-text-muted) !important;
            opacity: 1 !important;
        }
        
        /* Fix for autofill styling */
        .login-container input:-webkit-autofill,
        .login-container input:-webkit-autofill:hover,
        .login-container input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0 1000px var(--theme-input-bg) inset !important;
            -webkit-text-fill-color: var(--theme-text-primary) !important;
        }
        
        /* Remove conflicting login container styles */
        
        /* Remove login page special styling to keep header/footer */
        .login-page {
            /* Remove special styling that hides header */
        }
        
        /* Product card hover effects */
        .product-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
            cursor: pointer;
        }
        
        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }
        
        .product-card .card-body {
            position: relative;
            z-index: 1;
        }
        
        .product-card .btn {
            z-index: 2;
            position: relative;
        }
        
        /* Hero section buttons */
        .hero-section .btn {
            margin-right: 10px;
            margin-bottom: 10px;
        }
        
        /* Cart and auth buttons */
        .btn-outline-light:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        /* FLEXBOX STICKY FOOTER SOLUTION */
        html, body {
            height: 100% !important;
            margin: 0 !important;
            padding: 0 !important;
        }
        
        body {
            background-color: var(--theme-bg-primary) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease, color 0.3s ease !important;
        }
        
        /* Content wrapper takes all available space and sticks footer to bottom */
        .content-wrapper {
            display: flex !important;
            flex-direction: column !important;
            min-height: 100vh !important;
        }
        
        /* Footer should be at bottom with proper spacing */
        .footer {
            margin-top: auto !important;
            padding: 3rem 0 2rem 0 !important;
            background-color: #343a40 !important;
        }
        
        /* Footer headings styling */
        .footer h5 {
            color: #ffffff !important;
            font-size: 1.4rem !important;
            font-weight: 600 !important;
            margin-bottom: 1.2rem !important;
        }
        
        /* Admin page specific styling */
        .admin-page {
            background-color: var(--theme-bg-secondary) !important;
            transition: background-color 0.3s ease !important;
        }
        
        .admin-page .card-footer a {
            color: #212529 !important;
            font-weight: 600 !important;
        }
        
        .admin-page .card-footer a:hover {
            color: #007bff !important;
        }
        
        .admin-page h1, .admin-page h2, .admin-page h3, .admin-page h4, .admin-page h5, .admin-page h6 {
            color: #212529 !important;
        }
        
        /* Header normal positioning */
        header.navbar {
            flex-shrink: 0 !important;
            z-index: 9999 !important;
        }
        
        /* Page wrapper grows to fill space */
        .page-wrapper {
            flex: 1 !important;
            padding: 0 !important;
        }
        
        /* Main content */
        main[role="main"] {
            background-color: var(--theme-bg-primary) !important;
            padding: 0 !important;
            min-height: 100% !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Footer - shrinks to fit content */
        .footer {
            flex-shrink: 0 !important;
            width: 100% !important;
            background-color: #343a40 !important;
            color: #ffffff !important;
            padding: 2rem 0 !important;
            margin: 0 !important;
        }
        
        /* Container fixes */
        .container {
            max-width: 1200px !important;
            margin: 0 auto !important;
            padding-left: 15px !important;
            padding-right: 15px !important;
            width: 100% !important;
        }
        
        .container-fluid {
            width: 100% !important;
            margin: 0 auto !important;
            padding-left: 15px !important;
            padding-right: 15px !important;
        }
        
        /* Ensure content area has proper spacing */
        .py-4, .py-5 {
            padding-top: 1.5rem !important;
            padding-bottom: 1.5rem !important;
        }
        
        /* Page content wrapper */
        .page-content {
            padding: 2rem 0 !important;
            min-height: 60vh !important;
        }
        
        /* Hero section fix */
        .hero-section {
            padding: 4rem 0 !important;
            margin: 0 !important;
            background-color: var(--theme-bg-secondary) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease, color 0.3s ease !important;
        }
        
        .hero-section h1,
        .hero-section p,
        .hero-section .lead {
            color: white !important;
        }
        
        .hero-section img {
            max-width: 100% !important;
            height: auto !important;
            border-radius: 10px !important;
        }
        
        /* Section spacing fixes */
        section {
            margin: 0 !important;
            padding: 3rem 0 !important;
        }
        
        /* Ensure last section has bottom margin */
        section:last-child {
            margin-bottom: 2rem !important;
        }
        
        .bg-light {
            background-color: var(--theme-bg-secondary) !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Login container fix */
        .login-container {
            padding: 3rem 0 !important;
            background-color: var(--theme-bg-primary) !important;
            min-height: 60vh !important;
            display: flex !important;
            align-items: center !important;
            justify-content: center !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Footer spacing */
        .footer p {
            margin-bottom: 0.5rem !important;
            line-height: 1.6 !important;
        }
        
        /* COMPREHENSIVE FIX FOR ALL PAGES */
        
        /* Force white backgrounds and proper colors everywhere */
        * {
            box-sizing: border-box;
        }
        
        html, body {
            background-color: var(--theme-bg-primary) !important;
            color: var(--theme-text-primary) !important;
            margin: 0;
            padding: 0;
            transition: background-color 0.3s ease, color 0.3s ease !important;
        }
        
        /* Fix all input fields across all pages */
        input[type="text"],
        input[type="email"],
        input[type="password"],
        input[type="tel"],
        input[type="number"],
        input[type="search"],
        textarea,
        select,
        .form-control,
        .form-select {
            background-color: var(--theme-input-bg) !important;
            color: var(--theme-text-primary) !important;
            border: 1px solid var(--theme-input-border) !important;
            padding: 0.375rem 0.75rem !important;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease !important;
        }
        
        /* Focus states */
        input[type="text"]:focus,
        input[type="email"]:focus,
        input[type="password"]:focus,
        input[type="tel"]:focus,
        input[type="number"]:focus,
        input[type="search"]:focus,
        textarea:focus,
        select:focus,
        .form-control:focus,
        .form-select:focus {
            background-color: var(--theme-input-bg) !important;
            color: var(--theme-text-primary) !important;
            border-color: var(--theme-link-color) !important;
            outline: 0 !important;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
        }
        
        /* Placeholder text */
        input::placeholder,
        textarea::placeholder {
            color: var(--theme-text-muted) !important;
            opacity: 1 !important;
        }
        
        /* Autofill fix for all browsers */
        input:-webkit-autofill,
        input:-webkit-autofill:hover,
        input:-webkit-autofill:focus,
        input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 1000px var(--theme-input-bg) inset !important;
            -webkit-text-fill-color: var(--theme-text-primary) !important;
            background-color: var(--theme-input-bg) !important;
        }

        /* Dark theme specific autofill fixes */
        [data-theme="dark"] input:-webkit-autofill,
        [data-theme="dark"] input:-webkit-autofill:hover,
        [data-theme="dark"] input:-webkit-autofill:focus,
        [data-theme="dark"] input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 1000px #2d2d2d inset !important;
            -webkit-text-fill-color: #ffffff !important;
            background-color: #2d2d2d !important;
        }
        
        /* Cards */
        .card {
            background-color: var(--theme-card-bg) !important;
            border: 1px solid var(--theme-border-color) !important;
            box-shadow: 0 0.125rem 0.25rem var(--theme-shadow-color) !important;
            transition: background-color 0.3s ease, border-color 0.3s ease !important;
        }

        .card-body {
            background-color: var(--theme-card-bg) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease, color 0.3s ease !important;
        }

        .card-header {
            background-color: var(--theme-bg-secondary) !important;
            border-bottom: 1px solid var(--theme-border-color) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease !important;
        }

        .card-title, .card-text {
            color: var(--theme-text-primary) !important;
            transition: color 0.3s ease !important;
        }
        
        /* Main content areas */
        main[role="main"] {
            background-color: var(--theme-bg-primary) !important;
            flex: 1 !important;
            padding-bottom: 2rem !important;
            transition: background-color 0.3s ease !important;
        }

        /* Page content wrapper */
        .page-content {
            background-color: var(--theme-bg-primary) !important;
            flex: 1 !important;
            padding-bottom: 2rem !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Page wrapper should also flex */
        .page-wrapper {
            flex: 1 !important;
            display: flex !important;
            flex-direction: column !important;
        }
        
        /* Container fixes */
        .container, .container-fluid {
            background-color: transparent !important;
        }
        
        /* Login container special handling */
        .login-container {
            min-height: calc(100vh - 150px) !important;
            background-color: var(--theme-bg-primary) !important;
            padding: 2rem 0 !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Background utilities */
        .bg-light {
            background-color: var(--theme-bg-secondary) !important;
            transition: background-color 0.3s ease !important;
        }
        
        .bg-dark {
            background-color: #343a40 !important;
            color: #ffffff !important;
        }
        
        /* Text color fixes */
        h1, h2, h3, h4, h5, h6 {
            color: var(--theme-text-primary) !important;
            transition: color 0.3s ease !important;
        }
        
        p, span, div, label {
            color: inherit !important;
        }
        
        /* Additional dropdown fixes for navigation */
        .navbar .dropdown-menu {
            z-index: 10000 !important;
            position: absolute !important;
            top: 100% !important;
            border: 1px solid var(--theme-border-color) !important;
            box-shadow: 0 0.5rem 1rem var(--theme-shadow-color) !important;
            background-color: var(--theme-card-bg) !important;
            transition: background-color 0.3s ease, border-color 0.3s ease !important;
        }

        .navbar .dropdown-menu .dropdown-item {
            color: var(--theme-text-primary) !important;
            padding: 0.5rem 1rem !important;
            transition: color 0.3s ease !important;
        }

        .navbar .dropdown-menu .dropdown-item:hover {
            background-color: var(--theme-bg-secondary) !important;
            color: var(--theme-text-primary) !important;
            transition: background-color 0.3s ease !important;
        }
        
        /* Ensure header always stays on top */
        header {
            z-index: 9999 !important;
            position: relative !important;
        }
        
        .navbar {
            z-index: 9999 !important;
        }
        
        /* Navbar search styling */
        .navbar-search-btn {
            background-color: var(--theme-bg-secondary) !important;
            border-color: var(--theme-border-color) !important;
            color: var(--theme-text-primary) !important;
            transition: all 0.3s ease !important;
        }

        .navbar-search-btn:hover {
            background-color: var(--theme-text-primary) !important;
            border-color: var(--theme-text-primary) !important;
            color: var(--theme-bg-primary) !important;
        }

        .navbar-search-btn:focus {
            box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25) !important;
        }

        [data-theme="dark"] .navbar-search-btn {
            background-color: #2d2d2d !important;
            border-color: #404040 !important;
            color: #ffffff !important;
        }

        [data-theme="dark"] .navbar-search-btn:hover {
            background-color: #ffffff !important;
            border-color: #ffffff !important;
            color: #121212 !important;
        }

        /* Search input styling */
        .navbar-search .form-control {
            background-color: var(--theme-input-bg) !important;
            border-color: var(--theme-input-border) !important;
            color: var(--theme-text-primary) !important;
            transition: all 0.3s ease !important;
        }

        .navbar-search .form-control:focus {
            background-color: var(--theme-input-bg) !important;
            border-color: var(--theme-link-color) !important;
            color: var(--theme-text-primary) !important;
            box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25) !important;
        }

        .navbar-search .form-control::placeholder {
            color: var(--theme-text-muted) !important;
        }

        .navbar-search-results {
            max-height: 400px;
            overflow-y: auto;
            background: var(--theme-card-bg);
            border-radius: 0.375rem;
            box-shadow: 0 0.125rem 0.25rem var(--theme-shadow-color);
            border: 1px solid var(--theme-border-color);
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }
        
        .navbar-search-result-item {
            padding: 0.75rem;
            border-bottom: 1px solid var(--theme-border-color);
            cursor: pointer;
            transition: background-color 0.2s;
            color: var(--theme-text-primary);
        }
        
        .navbar-search-result-item:hover {
            background-color: var(--theme-bg-secondary);
            transition: background-color 0.3s ease;
        }
        
        .navbar-search-result-item:last-child {
            border-bottom: none;
        }
        
        .navbar-search-result-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 0.375rem;
        }
        
        /* User dropdown styling */
        .user-dropdown-toggle {
            white-space: nowrap !important;
            max-width: 200px !important;
            overflow: hidden !important;
        }

        .user-name-text {
            display: inline-block;
            max-width: 120px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
            vertical-align: middle;
        }

        /* Navbar responsive improvements */
        .navbar-nav {
            flex-wrap: nowrap !important;
        }

        .navbar-search {
            min-width: 200px;
            flex-shrink: 1;
        }

        @@media (max-width: 1200px) {
            .navbar-search {
                max-width: 300px !important;
            }

            .user-name-text {
                max-width: 100px;
            }
        }

        @@media (max-width: 991.98px) {
            .navbar-search {
                margin: 1rem 0;
                max-width: 100% !important;
                min-width: auto;
            }

            .user-name-text {
                max-width: 150px;
            }

            .navbar-nav {
                flex-wrap: wrap !important;
            }
        }

        @@media (max-width: 768px) {
            .user-name-text {
                max-width: 120px;
            }
        }
    </style>
</head>
<body class="@ViewData["BodyClass"]">
    <div class="content-wrapper">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                    <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                        <i class="fas fa-laptop me-2"></i>Electronics Store
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        @if (ViewData["BodyClass"]?.ToString() != "admin-page")
                        {
                            <ul class="navbar-nav me-3">
                                @if (!User.IsInRole("Admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ</a>
                                    </li>
                                }
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Products", "Home")">Sản phẩm</a>
                                </li>
                            </ul>
                            
                            <!-- Search Bar -->
                            <div class="navbar-search flex-grow-1 mx-2" style="max-width: 400px; position: relative; min-width: 200px;">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="navbarSearchInput" placeholder="Tìm kiếm sản phẩm..." aria-label="Tìm kiếm sản phẩm">
