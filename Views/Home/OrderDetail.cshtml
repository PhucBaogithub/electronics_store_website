@model ElectronicsStore.Models.Order
@{
    ViewData["Title"] = "Chi tiết đơn hàng #" + Model.Id;
}

<div class="page-content">
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-file-invoice me-2"></i>Chi tiết đơn hàng #@Model.Id</h2>
            <a href="@Url.Action("Orders", "Home")" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
        </div>

        <div class="row">
            <!-- Order Information -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Mã đơn hàng:</strong> @Model.OrderNumber</p>
                                <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                                <p><strong>Trạng thái:</strong>
                                    @switch (Model.Status)
                                    {
                                        case ElectronicsStore.Models.OrderStatus.Pending:
                                            <span class="badge bg-warning">Chờ xử lý</span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Confirmed:
                                            <span class="badge bg-info">Đã xác nhận</span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Processing:
                                            <span class="badge bg-info">Đang xử lý</span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Shipped:
                                            <span class="badge bg-primary">Đã gửi</span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Delivered:
                                            <span class="badge bg-success">Đã giao</span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Completed:
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle me-1"></i>Hoàn thành
                                            </span>
                                            break;
                                        case ElectronicsStore.Models.OrderStatus.Cancelled:
                                            <span class="badge bg-danger">Đã hủy</span>
                                            break;
                                    }
                                </p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Trạng thái thanh toán:</strong> 
                                    @switch (Model.PaymentStatus)
                                    {
                                        case ElectronicsStore.Models.PaymentStatus.Pending:
                                            <span class="badge bg-warning">Chờ thanh toán</span>
                                            break;
                                        case ElectronicsStore.Models.PaymentStatus.Paid:
                                            <span class="badge bg-success">Đã thanh toán</span>
                                            break;
                                        case ElectronicsStore.Models.PaymentStatus.Failed:
                                            <span class="badge bg-danger">Thanh toán thất bại</span>
                                            break;
                                        case ElectronicsStore.Models.PaymentStatus.Refunded:
                                            <span class="badge bg-info">Đã hoàn tiền</span>
                                            break;
                                    }
                                </p>
                                @if (Model.ShippedDate.HasValue)
                                {
                                    <p><strong>Ngày gửi:</strong> @Model.ShippedDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                }
                                @if (Model.DeliveredDate.HasValue)
                                {
                                    <p><strong>Ngày giao:</strong> @Model.DeliveredDate.Value.ToString("dd/MM/yyyy HH:mm")</p>
                                }
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <hr>
                            <p><strong>Ghi chú:</strong> @Model.Notes</p>
                        }
                    </div>
                </div>

                <!-- Order Items -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-shopping-cart me-2"></i>Sản phẩm trong đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        @foreach (var item in Model.OrderItems)
                        {
                            <div class="row align-items-center mb-3 border-bottom pb-3">
                                <div class="col-md-2">
                                    <img src="@(item.Product.ImageUrl ?? "https://via.placeholder.com/100x100/007bff/ffffff?text=Product")" 
                                         class="img-fluid rounded" style="max-height: 80px; object-fit: cover;" alt="@item.Product.Name">
                                </div>
                                <div class="col-md-4">
                                    <h6 class="mb-1">@item.Product.Name</h6>
                                    <p class="text-muted mb-0">@item.Product.Brand - @item.Product.Model</p>
                                </div>
                                <div class="col-md-2 text-center">
                                    <span class="fw-bold">@item.Quantity</span>
                                </div>
                                <div class="col-md-2 text-end">
                                    <span class="text-muted">@item.UnitPrice.ToString("N0") VNĐ</span>
                                </div>
                                <div class="col-md-2 text-end">
                                    <span class="fw-bold text-success">@item.TotalPrice.ToString("N0") VNĐ</span>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Order Summary & Shipping -->
            <div class="col-md-4">
                <!-- Order Summary -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-calculator me-2"></i>Tổng kết đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <span>Tạm tính:</span>
                            <span>@Model.TotalAmount.ToString("N0") VNĐ</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Phí vận chuyển:</span>
                            <span>@Model.ShippingCost.ToString("N0") VNĐ</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Thuế:</span>
                            <span>@Model.Tax.ToString("N0") VNĐ</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between fw-bold text-success">
                            <span>Tổng cộng:</span>
                            <span>@Model.GrandTotal.ToString("N0") VNĐ</span>
                        </div>
                    </div>
                </div>

                <!-- Shipping Information -->
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-shipping-fast me-2"></i>Thông tin giao hàng</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-1"><strong>@Model.ShippingFirstName @Model.ShippingLastName</strong></p>
                        <p class="mb-1">@Model.ShippingAddress</p>
                        <p class="mb-1">@Model.ShippingCity, @Model.ShippingPostalCode</p>
                        <p class="mb-1">@Model.ShippingCountry</p>
                        @if (!string.IsNullOrEmpty(Model.ShippingPhone))
                        {
                            <p class="mb-0"><i class="fas fa-phone me-1"></i>@Model.ShippingPhone</p>
                        }
                    </div>
                </div>

                <!-- Actions -->
                <!-- Debug: Current Order Status = @Model.Status (@((int)Model.Status)) -->
                @if (Model.Status == ElectronicsStore.Models.OrderStatus.Pending)
                {
                    <div class="card">
                        <div class="card-header bg-light">
                            <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Thao tác</h5>
                        </div>
                        <div class="card-body">
                            <button class="btn btn-danger w-100" onclick="cancelOrder(@Model.Id)">
                                <i class="fas fa-times me-2"></i>Hủy đơn hàng
                            </button>
                        </div>
                    </div>
                }
                @if (Model.Status == ElectronicsStore.Models.OrderStatus.Delivered)
                {
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-truck me-2"></i>Đơn hàng đã được giao
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-success mb-3">
                                <i class="fas fa-check-circle me-2"></i>
                                <strong>Đơn hàng đã được giao thành công!</strong><br>
                                Vui lòng kiểm tra sản phẩm và xác nhận khi bạn đã nhận được hàng.
                            </div>

                            <div class="d-grid gap-2 mb-3">
                                <button class="btn btn-success btn-lg" onclick="confirmOrderReceipt(@Model.Id)" id="confirmReceiptBtn">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <strong>XÁC NHẬN ĐÃ NHẬN HÀNG</strong>
                                </button>
                            </div>

                            <div class="text-muted small mb-3">
                                <i class="fas fa-info-circle me-1"></i>
                                Sau khi xác nhận, đơn hàng sẽ được đánh dấu là hoàn thành và bạn có thể đánh giá sản phẩm.
                            </div>

                            <hr>
                            <div class="mt-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-star text-warning me-2"></i>Đánh giá sản phẩm:
                                </h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <button class="btn btn-outline-warning btn-sm" onclick="reviewProduct(@item.ProductId, '@item.Product.Name')">
                                            <i class="fas fa-star me-1"></i>Đánh giá "@item.Product.Name"
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @if (Model.Status == ElectronicsStore.Models.OrderStatus.Completed)
                {
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-check-circle me-2"></i>Đơn hàng hoàn thành
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-success mb-3">
                                <i class="fas fa-heart me-2 text-danger"></i>
                                <strong>Đơn hàng đã hoàn thành!</strong><br>
                                Cảm ơn bạn đã mua sắm tại Electronics Store. Chúng tôi hy vọng bạn hài lòng với sản phẩm.
                            </div>

                            <div class="mt-3">
                                <h6 class="text-muted">
                                    <i class="fas fa-star text-warning me-2"></i>Đánh giá sản phẩm:
                                </h6>
                                <div class="d-flex flex-wrap gap-2">
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <button class="btn btn-outline-warning btn-sm" onclick="reviewProduct(@item.ProductId, '@item.Product.Name')">
                                            <i class="fas fa-star me-1"></i>Đánh giá "@item.Product.Name"
                                        </button>
                                    }
                                </div>
                                <div class="text-muted small mt-2">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Đánh giá của bạn sẽ giúp khách hàng khác có thêm thông tin về sản phẩm.
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelOrder(orderId) {
            if (confirm('Bạn có chắc muốn hủy đơn hàng này? Hành động này không thể hoàn tác.')) {
                $.ajax({
                    url: '@Url.Action("CancelOrder", "Home")',
                    type: 'POST',
                    data: { id: orderId },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload(); // Refresh page to show updated status
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi hủy đơn hàng.');
                    }
                });
            }
        }

        /**
         * Confirm order receipt - Customer confirms they have received the delivered order
         * This transitions the order from "Delivered" to "Completed" status
         */
        function confirmOrderReceipt(orderId) {
            // Enhanced confirmation dialog
            const confirmMessage = `
🚚 XÁC NHẬN NHẬN HÀNG

Bạn có chắc chắn đã nhận được tất cả sản phẩm trong đơn hàng này không?

✅ Sau khi xác nhận:
• Đơn hàng sẽ được đánh dấu là hoàn thành
• Bạn có thể đánh giá sản phẩm
• Không thể thay đổi trạng thái đơn hàng

Nhấn OK để xác nhận hoặc Cancel để hủy.
            `;

            if (confirm(confirmMessage.trim())) {
                // Show loading state
                const button = document.getElementById('confirmReceiptBtn');
                const originalText = button.innerHTML;
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...';
                button.classList.add('btn-secondary');
                button.classList.remove('btn-success');

                $.ajax({
                    url: '/api/Orders/' + orderId + '/confirm-receipt',
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            // Show success message with better styling
                            button.innerHTML = '<i class="fas fa-check me-2"></i>Đã xác nhận thành công!';
                            button.classList.add('btn-success');
                            button.classList.remove('btn-secondary');

                            // Show success alert
                            const alertHtml = `
                                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                    <i class="fas fa-check-circle me-2"></i>
                                    <strong>Thành công!</strong> ${response.message}
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            `;
                            $('.card-body').prepend(alertHtml);

                            // Refresh page after 2 seconds to show updated status
                            setTimeout(() => {
                                location.reload();
                            }, 2000);
                        } else {
                            alert('❌ ' + response.message);

                            // Restore button state
                            button.disabled = false;
                            button.innerHTML = originalText;
                            button.classList.add('btn-success');
                            button.classList.remove('btn-secondary');
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Error confirming order receipt:', error);
                        alert('❌ Có lỗi xảy ra khi xác nhận nhận hàng. Vui lòng thử lại sau.');

                        // Restore button state
                        button.disabled = false;
                        button.innerHTML = originalText;
                        button.classList.add('btn-success');
                        button.classList.remove('btn-secondary');
                    }
                });
            }
        }

        /**
         * Navigate to product review page
         */
        function reviewProduct(productId, productName) {
            // Navigate to review page - you can customize this URL based on your review system
            window.location.href = '/api/Reviews/product/' + productId;
        }
    </script>
}