@model ElectronicsStore.Models.Category

@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    ViewData["BodyClass"] = "admin-page";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-dark"><i class="fas fa-edit me-2"></i>Chỉnh sửa danh mục</h2>
                <a href="@Url.Action("Categories", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                </a>
            </div>

            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Thông tin danh mục #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCategory" method="post">
                        <input asp-for="Id" type="hidden">
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Tên danh mục *</label>
                            <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả danh mục"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox">
                                <label asp-for="IsActive" class="form-check-label">
                                    Kích hoạt danh mục
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="fas fa-clock me-1"></i>Tạo lúc: @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Categories", "Admin")" class="btn btn-secondary me-md-2">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Cập nhật danh mục
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 