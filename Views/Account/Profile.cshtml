@model ElectronicsStore.Models.User
@{
    ViewData["Title"] = "Thông tin tài khoản";
}

<div class="page-content">
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="fas fa-user-circle me-2"></i>Thông tin tài khoản
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <form method="post" action="@Url.Action("UpdateProfile", "Account")">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">Họ</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" 
                                           value="@Model.FirstName" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">Tên</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" 
                                           value="@Model.LastName" required>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" value="@Model.Email" readonly>
                                <div class="form-text">Email không thể thay đổi</div>
                            </div>

                            <div class="mb-3">
                                <label for="phoneNumber" class="form-label">Số điện thoại</label>
                                <input type="tel" class="form-control" id="phoneNumber" name="phoneNumber" 
                                       value="@Model.PhoneNumber" placeholder="Nhập số điện thoại">
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Ngày tạo tài khoản</label>
                                    <input type="text" class="form-control" value="@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")" readonly>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <input type="text" class="form-control" value="@(Model.IsActive ? "Hoạt động" : "Bị khóa")" readonly>
                                </div>
                            </div>

                            <div class="d-flex gap-2 mb-4">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Cập nhật thông tin
                                </button>
                                <a href="@Url.Action("ChangePassword", "Account")" class="btn btn-warning">
                                    <i class="fas fa-key me-2"></i>Đổi mật khẩu
                                </a>
                            </div>
                        </form>

                        <hr>

                        <div class="row">
                            <div class="col-md-6">
                                <h5><i class="fas fa-shopping-bag me-2"></i>Thống kê mua hàng</h5>
                                <p class="text-muted">Tổng số đơn hàng: <strong>0</strong></p>
                                <p class="text-muted">Tổng tiền đã chi: <strong>0 VNĐ</strong></p>
                            </div>
                            <div class="col-md-6">
                                <h5><i class="fas fa-heart me-2"></i>Sản phẩm yêu thích</h5>
                                <a href="#" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-list me-2"></i>Xem danh sách yêu thích
                                </a>
                            </div>
                        </div>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                <i class="fas fa-home me-2"></i>Về trang chủ
                            </a>
                            <a href="@Url.Action("Orders", "Home")" class="btn btn-outline-info">
                                <i class="fas fa-box me-2"></i>Xem đơn hàng
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 